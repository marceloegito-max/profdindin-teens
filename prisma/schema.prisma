generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  TEEN
  ADMIN
}

enum IncomeSource {
  MESADA
  TRABALHO
  FREELANCE
  NENHUM
}

enum Archetype {
  GASTADOR
  POUPADOR
  INVESTIDOR
  EQUILIBRADO
}

enum RiskProfile {
  CONSERVADOR
  MODERADO
  ARROJADO
}

enum ActivityModule {
  CHECKUP
  RAIO_X
  MAPA_TESOURO
}

enum CoreDrive {
  EPIC_MEANING
  DEVELOPMENT
  EMPOWERMENT
  OWNERSHIP
  SOCIAL_INFLUENCE
  SCARCITY
  UNPREDICTABILITY
  AVOIDANCE
}

enum MissionType {
  COMPLETE_ACTIVITIES
  EARN_XP
  MAINTAIN_STREAK
  UNLOCK_BADGES
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          UserRole  @default(TEEN)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  sessions              Session[]
  teenProfile           TeenProfile?
  userProgress          UserProgress?
  completedActivities   CompletedActivity[]
  userBadges            UserBadge[]
  streaks               Streak[]
  stressorAssessments   StressorAssessment[]
  completedMissions     CompletedMission[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model TeenProfile {
  id                String        @id @default(cuid())
  userId            String        @unique
  age               Int?
  incomeSource      IncomeSource?
  monthlyIncome     Float?
  mainGoal          String?
  archetype         Archetype?
  riskProfile       RiskProfile?
  hasDebt           Boolean       @default(false)
  hasSavings        Boolean       @default(false)
  hasInvestments    Boolean       @default(false)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("teen_profiles")
}

model UserProgress {
  id             String   @id @default(cuid())
  userId         String   @unique
  xp             Int      @default(0)
  level          Int      @default(1)
  currentStreak  Int      @default(0)
  longestStreak  Int      @default(0)
  lastActiveDate DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_progress")
}

model Badge {
  id             String      @id @default(cuid())
  name           String      @unique
  description    String
  icon           String
  criteria       String
  requiredValue  Int
  createdAt      DateTime    @default(now())

  userBadges UserBadge[]

  @@map("badges")
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  earnedAt  DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@map("user_badges")
}

model Streak {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("streaks")
}

model Activity {
  id                String         @id @default(cuid())
  code              String         @unique
  module            ActivityModule
  name              String
  objective         String
  tasks             Json
  tools             Json
  successCriteria   Json
  referenceModels   Json
  impact            String
  points            Int
  suggestedDuration String
  prerequisites     String[]
  coreDrives        CoreDrive[]
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  completedActivities CompletedActivity[]

  @@map("activities")
}

model CompletedActivity {
  id          String   @id @default(cuid())
  userId      String
  activityId  String
  completedAt DateTime @default(now())
  pointsEarned Int
  responses   Json?

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  activity Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)

  @@unique([userId, activityId])
  @@map("completed_activities")
}

model StressorAgent {
  id          String   @id @default(cuid())
  name        String   @unique
  description String
  icon        String
  category    String
  createdAt   DateTime @default(now())

  assessments StressorAssessment[]

  @@map("stressor_agents")
}

model StressorAssessment {
  id          String   @id @default(cuid())
  userId      String
  stressorId  String
  impactLevel Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  stressor StressorAgent  @relation(fields: [stressorId], references: [id], onDelete: Cascade)

  @@unique([userId, stressorId])
  @@map("stressor_assessments")
}

model DailyMission {
  id          String      @id @default(cuid())
  title       String
  description String
  type        MissionType
  target      Int
  reward      Int
  icon        String
  validUntil  DateTime
  createdAt   DateTime    @default(now())

  completedMissions CompletedMission[]

  @@map("daily_missions")
}

model CompletedMission {
  id          String   @id @default(cuid())
  userId      String
  missionId   String
  completedAt DateTime @default(now())
  rewardEarned Int

  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  mission DailyMission @relation(fields: [missionId], references: [id], onDelete: Cascade)

  @@unique([userId, missionId])
  @@map("completed_missions")
}
